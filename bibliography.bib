doi = {10.1038/s41588-018-0129-5},
file = {:Users/julienbryios/Documents/Data/Papers/s41588-018-0129-5.pdf:pdf},
issn = {1061-4036},
journal = {Nature Genetics},
keywords = {Genetics research,Neuroscience,Schizophrenia,Transcriptomics},
number = {6},
pages = {825--833},
title = {{Genetic identification of brain cell types underlying schizophrenia}},
